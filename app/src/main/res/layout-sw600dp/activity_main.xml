<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerHorizontal"
    tools:context="com.example.jay.udacitypopularmovies.activities.MainActivity">


    <fragment
        android:id="@+id/fragment_movies"
        class="com.example.jay.udacitypopularmovies.fragments.MovieFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </fragment>

    <FrameLayout
        android:id="@+id/details_container"
        class="com.example.jay.udacitypopularmovies.fragments.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </FrameLayout>


</LinearLayout>